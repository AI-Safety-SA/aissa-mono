{
  "$schema": "https://turborepo.com/schema.json",
  "ui": "tui",
  "tasks": {
    "pre-build": {
      "cache": false,
      "env": ["DATABASE_URL", "PAYLOAD_SECRET"]
    },
    "build": {
      "dependsOn": ["^build"],
      "inputs": ["$TURBO_DEFAULT$", ".env*"],
      "env": ["DATABASE_URL", "PAYLOAD_SECRET"],
      "outputs": ["dist/**", ".next/**", "!.next/cache/**"]
    },
    "build:local": {
      "dependsOn": ["^build"],
      "inputs": ["$TURBO_DEFAULT$", ".env*"],
      "env": ["DATABASE_URL", "PAYLOAD_SECRET"],
      "outputs": ["dist/**", ".next/**", "!.next/cache/**"]
    },
    "track-record#build": {
      "dependsOn": ["pre-build", "^build"]
    },
    "lint": {
      "dependsOn": ["^lint"]
    },
    "check-types": {
      "dependsOn": ["^check-types"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    }
  }
}
